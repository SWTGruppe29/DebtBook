<Window x:Class="DebtBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41"></RowDefinition>

            <RowDefinition Height="Auto" MinHeight="378"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="5">Debtors/Creditors</Label>
        
        <Button Grid.Column="1" Grid.Row="1" Margin="5" Height="25" VerticalAlignment="Top" Command="{Binding AddDebtorCommand}">Add</Button>
        <TextBox Grid.Row="1" Grid.Column="0" Height="30" VerticalAlignment="Top" Margin="5,5,5,5"/>
        <GridSplitter Grid.Column="2" Grid.RowSpan="2" Width="5" HorizontalAlignment="Stretch" />
        <DataGrid Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" MinWidth="500" VerticalAlignment="Top" HorizontalAlignment="Center" MinHeight="400" Height="400" Margin="1,0,89,0" Width="500">

        </DataGrid>
    </Grid>
</Window>
